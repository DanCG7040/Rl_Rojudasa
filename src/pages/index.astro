  <Navigation client:load />
  <Hero client:load />
  <UpcomingMatches client:visible />

  <section class="social-section">
    <div class="container">
      <h2 class="social-title">SÃ­guenos</h2>
      <div class="social-links">
        <a href="https://www.instagram.com/real_takercup?igsh=MWltdHNvN3ZiYTk4Mg==" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Instagram">
          <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
