  <a href="https://wa.me/573004201706?text=Hola,%20quiero%20participar%20en%20el%20torneo" class="participate-btn-floating" target="_blank" rel="noopener noreferrer">
    Participa
  </a>
</Layout>

<style>
  .social-section {
    padding: 48px 20px;
    background: #0a0a0a;
    border-top: 1px solid rgba(255, 107, 53, 0.2);
    text-align: center;
  }

  .social-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.25rem;
    color: #ffd23f;
    margin-bottom: 24px;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 32px;
    flex-wrap: wrap;
  }

  .social-link {
    display: inline-flex;
    align-items: center;
    gap: 10px;
    padding: 14px 24px;
    background: rgba(255, 107, 53, 0.1);
    border: 2px solid rgba(255, 107, 53, 0.4);
    border-radius: 12px;
    color: #fff;
    text-decoration: none;
    font-family: 'Orbitron', sans-serif;
    font-weight: 600;
    font-size: 0.95rem;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: rgba(255, 107, 53, 0.25);
    border-color: #ff6b35;
    color: #ffd23f;
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(255, 107, 53, 0.3);
  }

  .social-link svg {
    flex-shrink: 0;
  }

  .footer {
    padding: 40px 0;
    background: #0a0a0a;
    border-top: 1px solid rgba(255, 107, 53, 0.2);
    text-align: center;
  }

  .footer p {
    color: #b0b0b0;
    font-size: 0.9rem;
    margin: 0;
  }

  @media (max-width: 768px) {
    .social-section {
      padding: 36px 16px;
    }
    .social-links {
      gap: 20px;
    }
    .social-link {
      padding: 12px 20px;
      font-size: 0.9rem;
    }
  }

  .participate-btn-floating {
    position: fixed;
    bottom: 30px;
    right: 30px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 15px 30px;
    background: linear-gradient(135deg, #ff6b35, #ffd23f);
    color: #ffffff;
    text-decoration: none;
    border-radius: 30px;
    font-family: 'Orbitron', sans-serif;
    font-weight: 700;
    font-size: 1rem;
    transition: all 0.3s ease;
    box-shadow: 0 4px 20px rgba(255, 107, 53, 0.4);
    z-index: 999;
    animation: pulse 2s ease-in-out infinite;
  }

  .participate-btn-floating:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 6px 25px rgba(255, 107, 53, 0.5);
  }

  @keyframes pulse {
    0%, 100% {
      box-shadow: 0 4px 20px rgba(255, 107, 53, 0.4);
    }
    50% {
      box-shadow: 0 4px 25px rgba(255, 107, 53, 0.6);
    }
  }

  @media (max-width: 768px) {
    .participate-btn-floating {
      bottom: 20px;
      right: 20px;
      padding: 12px 24px;
      font-size: 0.9rem;
    }
  }
</style>
